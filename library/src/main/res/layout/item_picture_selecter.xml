<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivPictureSelecterShow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/ico_picture_default"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivPictureSelecterDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivPictureSelecterShow"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:layout_alignRight="@id/ivPictureSelecterShow"
        android:layout_alignEnd="@id/ivPictureSelecterShow"
        android:paddingBottom="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ico_picture_delete"
        tools:ignore="ContentDescription" />

</RelativeLayout>