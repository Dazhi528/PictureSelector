<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_pictureselecter_dialog">

    <RelativeLayout
        android:id="@+id/photo_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/psdialog_height"
        android:layout_margin="@dimen/psdialog_radius"
        android:background="@drawable/selct_pictureselecter_dialog"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/psdialog_margin_x"
            android:layout_marginStart="@dimen/psdialog_margin_x"
            android:gravity="center"
            android:text="@string/picture_selecter_photo"
            android:textColor="@color/picture_selecter_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/picture_selecter_line" />

    <RelativeLayout
        android:id="@+id/choose_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/psdialog_height"
        android:layout_margin="@dimen/psdialog_radius"
        android:background="@drawable/selct_pictureselecter_dialog"
        android:clickable="true"
        tools:ignore="KeyboardInaccessibleWidget">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/psdialog_margin_x"
            android:layout_marginStart="@dimen/psdialog_margin_x"
            android:gravity="center"
            android:text="@string/picture_selecter_album"
            android:textColor="@color/picture_selecter_text"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
